<% layout('/layouts/boilerplate') -%>

<div class="row mt-3">
	<h2 class="col-6 offset-3">SignUp on WanderLust</h2>
	<div class=" col-6 offset-3">
		<form action="/signUp" method="post" class="needs-validation novalidate">
            

			<div class="mb-3">
				<label for="username"
				 class="form-lable">Username</label >
				<input type="text"
				id="username"
				 name="username"
				  class="form-control"
				  required> 
				 
			 </div>

			 
			<div class="mb-3">
				<label for="email"
				 class="form-lable">Email</label >
				<input type="email"
				id="email"
				 name="email"
				  class="form-control"
				  required> 
				 
			 </div>

			 
			<div class="mb-3">
				<label for="password"
				 class="form-lable">Password</label >
				<input type="password"
				id="username"
				 name="password"
				  class="form-control"
				  required> 
				 
			 </div>
                       <button class=" btn btn-success">SignUp</button>
		</form>
	</div>
</div>